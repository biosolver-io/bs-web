datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())

  email String @unique
  firstName String?
  lastName String?
  phone String?
  addressLine1 String?
  addressLine2 String?
  city String?
  state String?
  postalCode String?
  country String?

  websiteUrl String?
  linkedinUrl String?
  googleScholarUrl String?
  githubUrl String?
  twitterUrl String?

  minimumExpectedSalary Int?
  currency String?
  minimumHourlyRate Int?

  bio String?
  pronouns String?
  avatar String?
  resume String?
  dateOfBirth DateTime?
  sourceType String?
  source String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
  notes    Note[]
  degrees  Degree[]
  workExperiences WorkExperience[]
  certifications Certification[]
  roles    UserRole[]
  organizations Organization[]
  jobPostings JobPosting[]
  referralCodes ReferralCode[]
  workStylePreferences WorkStylePreference[]
  rolesOfInterest RoleOfInterest[]
}

model WorkStylePreference {
  id    String @id @default(cuid())

  workStyle String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model RoleOfInterest {
  id    String @id @default(cuid())
  
  role String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model ReferralCode {
  id    String @id @default(cuid())
  code String @unique
  used Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ownerId String
}

model UserRole {
  id    String @id @default(cuid())
  role String @default("solver")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Note {
  id    String @id @default(cuid())
  title String
  body  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model Degree {
  id    String @id @default(cuid())

  level String
  major  String

  school  String
  country  String?
  stateOrCity String?

  startYear Int?
  startMonth Int?
  endYear Int?
  endMonth Int?  
  ongoing Boolean? @default(false)

  assessmentFormat String?
  grade String?
  hasEca Boolean?
  ecaAuthority String?

  degreeCertificate String?
  marksheet String?
  ecaCertificate String?
  thesis String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  isTemp Boolean @default(true)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  accomplishments Accomplishment[]
}

model WorkExperience {
  id    String @id @default(cuid())

  title String
  level String?
  employmentType  String?
  company  String
  employerType String?
  companyWebsite String?
  companyLinkedIn String?
  country  String?
  stateOrCity String?
  industry String?

  startYear Int?
  startMonth Int?
  endYear Int?
  endMonth Int?  
  ongoing Boolean? @default(false)

  primaryDuties String?
  secondaryDuties String?

  proofOfEmployment String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  isTemp Boolean @default(true)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  accomplishments Accomplishment[]
}

model Certification {
  id    String @id @default(cuid())
  name String
  description  String?
  issuingAuthority String?
  durationInMonths Int?
  issueYear Int?
  issueMonth Int?
  expirationYear Int?
  expirationMonth Int?
  credentialId String?
  credentialUrl String?

  certificate String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  isTemp Boolean @default(true)
}

model Accomplishment {
  id    String @id @default(cuid())  
  documentUrl  String?
  title String?
  link String?
  objective String?
  organization String?
  publisher String?
  type String?
  details String?
  category String?
  status String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  degree   Degree?   @relation(fields: [degreeId], references: [id])
  degreeId String?

  workExperience   WorkExperience?   @relation(fields: [workExperienceId], references: [id])
  workExperienceId String?
}

model Organization {
  id    String @id @default(cuid())
  name String
  description  String?
  location String?
  remote Boolean @default(false)
  website String?
  linkedin String?
  github String?
  twitter String?
  bio String?
  email String
  phone String?
  addressLine1 String?
  addressLine2 String?
  city String?
  state String?
  zip String?
  country String?
  dateFounded DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  jobs JobPosting[]
}

model JobPosting {
  id    String @id @default(cuid())
  title String
  description  String[]
  location String
  jobType String
  remote Boolean
  salary String
  aboutCompany String[]
  link String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String

  organization Organization @relation(fields: [organizationId], references: [id])
  organizationId String
}

model Skill {
  id    String @id @default(cuid())
  name String
  description  String?  
  type String?
}